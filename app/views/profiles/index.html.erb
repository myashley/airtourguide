

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Country code</th>
      <th>Postcode</th>
      <th>Phone number</th>
      <th>About me</th>

      <th>Is tour guide</th>
      <th>Is photographer</th>
      <th>Has car</th>
      <th>Has historical knowledge</th>
      <th>Intro tour guide</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
 
      <tr>
      <td><%= profile.id %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.street_address %></td>
        <td><%= profile.city %></td>
        <td><%= profile.state %></td>
        <td><%= profile.country_code %></td>
        <td><%= profile.postcode %></td>
        <td><%= profile.phone_number %></td>
        <td><%= profile.about_me %></td>

        <td><%= profile.is_tour_guide %></td>
        <td><%= profile.is_photographer %></td>
        <td><%= profile.has_car %></td>
        <td><%= profile.has_historical_knowledge %></td>
        <td><%= profile.intro_tour_guide %></td>
        <td><%= profile.user.email %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if policy(profile).edit? %>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <% end %>
        <% if policy(profile).destroy? %>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
