<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :profile_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :profile_last_name %>
  </div>
  

  <div class="field">
    <%= form.label :street_address %>
    <%= form.text_field :street_address, id: :profile_street_address %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, id: :profile_city %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state, id: :profile_state %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.country_select :country_code, priority_countries: ['AU', 'NZ'], id: :profile_country_code %>
  </div>

  <div class="field">
    <%= form.label :postcode %>
    <%= form.text_field :postcode, id: :profile_postcode %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, id: :profile_phone_number %>
  </div>



    <div class="field">
    <%= form.label :about_me %>
    <%= form.text_area :about_me, id: :profile_about_me %>
  </div>



  <div class="field">
    <%= form.label :is_tour_guide %>
    <%= form.check_box :is_tour_guide, id: :profile_is_tour_guide %>
  </div>

  <div class="field">
    <%= form.label :is_photographer %>
    <%= form.check_box :is_photographer, id: :profile_is_photographer %>
  </div>

  <div class="field">
    <%= form.label :has_car %>
    <%= form.check_box :has_car, id: :profile_has_car %>
  </div>

  <div class="field">
    <%= form.label :has_historical_knowledge %>
    <%= form.check_box :has_historical_knowledge, id: :profile_has_historical_knowledge %>
  </div>

<div class="field">
    <%= form.label 'Fare per hour (AUD)' %>
    <%= form.number_field :fare_per_hour, step: 0.5, id: :profile_fare_per_hour %>
  </div>
  
  <div class="field">
    <%= form.label :intro_tour_guide %>
    <%= form.text_area :intro_tour_guide, id: :profile_intro_tour_guide %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
