<p id="notice"><%= notice %></p>

<h1>Tours</h1>

<table>
  <thead>
    <tr>
      <th>Start date time</th>
      <th>End date time</th>
      <th>Description</th>
      <th>Price</th>
      <th>User</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
          <td><%= tour.start_date_time %></td>
          <td><%= tour.end_date_time %></td>
          <td><%= tour.description %></td>
          <td><%= tour.price %></td>
          <td><%= tour.user.profile.first_name %></td>
          <td><%= tour.location.name %></td>

        <td><%= link_to 'Show', tour %></td>

        <% if policy(tour).edit? %>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <% end %>

        <% if policy(tour).destroy? %>
        <td><%= link_to 'Delete', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

