<p id="notice"><%= notice %></p>

<h1>Tours</h1>

<p>
<%= link_to 'Add Tour', new_tour_path %>
</p>


<% @tours.each do |tour| %>
    <div style="border: 1px; padding: 10px;">
      <%= link_to tour_path(tour) do %>
          <%= render 'tour', tour: tour %>
      <% end %>

      <% if policy(tour).edit? %>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
      <% end %>

      <% if policy(tour).destroy? %>
        <td><%= link_to 'Delete', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </div>
<% end %>


