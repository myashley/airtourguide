
<div class="flex-container">
<div class="flex-item">
<p>
  <strong>User:</strong>
  <%= @photo.user.profile.fullname %>
</p>

<p>
  <%= image_tag @photo.image_url(:medium) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @photo.description %>
</p>

<p>
  <strong>Profile Photo:</strong>
  <%= @photo.is_profile ? "Yes" : "No" %>
</p>

<% if policy(@photo).edit? %>
<%= link_to 'Edit', edit_photo_path(@photo), class: "right" %>
<% end %>

</div>
</div>